@model DonerSermaye.Models.Data.Bolumler

@{
    ViewData["Title"] = "Bölüm Sil";
    ViewData["Baslik"] = "Bölüm Sil";
    Layout = "~/Views/Shared/doner.cshtml";
}



<h3>  @Html.DisplayFor(model => model.Bolum) adlı bölümü silmek istiyor musunuz?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
          Bölüm
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Bolum)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Bölümlerimiz</a>
    </form>
</div>
