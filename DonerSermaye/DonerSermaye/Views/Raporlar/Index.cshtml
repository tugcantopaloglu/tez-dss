@model IEnumerable<DonerSermaye.Models.Data.Isler>

@{
    ViewData["Title"] = "Raporlama İşlemleri";
    ViewData["Baslik"] = "Raporlama İşlemleri";
    Layout = "~/Views/Shared/doner.cshtml";
}

<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>
                BÖLÜM
            </th>
            <th>
                FİRMA
            </th>
            <th>
                İŞ TÜRÜ
            </th>
            <th>
                TUTAR
            </th>
            <th>
                KDV ORANI
            </th>
            <th>
                FATURA TARİHİ
            </th>
            <th>
                FATURA NO
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bolum.Bolum)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firma.FirmaAdi)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tur.Tur)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Tutar) TL
               
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Kdv)

            </td>
            @Html.DisplayFor(modelItem => item.FaturaNo)
            <td> @Html.DisplayFor(modelItem => item.FaturaTarihi)</td>
 
            <td>
                @Html.DisplayFor(modelItem => item.Hesap.Id)
            </td>

        </tr>
}
    </tbody>
</table>
