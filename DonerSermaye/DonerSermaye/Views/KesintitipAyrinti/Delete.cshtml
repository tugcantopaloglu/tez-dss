@model DonerSermaye.Models.Data.KesintitipAyrinti

@{
    ViewData["Title"] = "Silme İşlemi";
    ViewData["Baslik"] = "Silme İşlemi";
    Layout = "~/Views/Shared/doner.cshtml";
}

<h3>  @Html.DisplayFor(model => model.Aciklama) adlı kesinti tip ayrıntısını silmek İstiyor musunuz?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
           Kesinti Tipi
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-info" >Kesinti Tip Ayrıntıları</a>
    </form>
</div>
