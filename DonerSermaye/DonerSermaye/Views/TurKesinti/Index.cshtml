@model IEnumerable<DonerSermaye.Models.Data.Istipkesinti>

@{
    ViewData["Title"] = "Tür Kesinti İşlemleri";
    ViewData["Baslik"] = "Tür Kesinti İşlemleri";
    Layout = "~/Views/Shared/doner.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary"> + Kesinti Ekle</a>
</p>
<table class="table table-hover table-bordered table-condensed" >
    <thead>
        <tr>
            <th>
               İş Türü
            </th>
            <th>
              Kesinti
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsTipiNavigation.Tur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kesinti.Kesinti)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs"><i class="fa fa-pencil-square-o"></i> Düzenle</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-xs"><i class="fa fa-pencil-square-o"></i> Detay</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
