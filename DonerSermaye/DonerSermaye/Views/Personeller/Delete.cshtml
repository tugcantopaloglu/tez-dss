@model DonerSermaye.Models.Data.Personeller

@{
    ViewData["Title"] = "Personel Silme İşlemi";
    ViewData["Baslik"] = "Personel Silme İşlemi";
    Layout = "~/Views/Shared/doner.cshtml";
}


<h3 class="text-danger"><b> @Html.DisplayFor(model => model.Ad)  @Html.DisplayFor(model => model.Soyad)</b> adlı personeli silmek istiyor musunuz ?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tc Kimlik No
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TcKimlikNo)
        </dd>
        <dt>
            Ad
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt>
            Soyad
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Soyad)
        </dd>
        <dt>
            Iban
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Iban)
        </dd>
        <dt>
            Şifre
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sifre)
        </dd>
        <dt>
            Bölüm
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Bolum.Bolum)
        </dd>
        <dt>
            Ünvan
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Unvan.Unvan)
        </dd>
        <dt>
            Yetki
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Yetki.Yetki)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Personel Listesi</a>
    </form>
</div>
