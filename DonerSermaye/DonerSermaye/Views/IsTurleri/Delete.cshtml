@model DonerSermaye.Models.Data.IsTurleri

@{
    ViewData["Title"] = "İş Türü Silme";
    ViewData["Baslik"] = "İş Türü Silme";
    Layout = "~/Views/Shared/doner.cshtml";
}

<h3> @Html.DisplayFor(model => model.Tur) adlı türü silmek istiyor musunuz ?</h3>
<div>


    <dl class="dl-horizontal">
        <dt>
          Tür:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tur)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">İş Türü Listesi</a>
    </form>
</div>
