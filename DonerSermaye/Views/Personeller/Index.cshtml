@model IEnumerable<DonerSermaye.Models.Data.Personeller>

@{
    ViewData["Title"] = "Personel Listesi";
    ViewData["Baslik"] = "Personel Listesi";
    Layout = "~/Views/Shared/doner.cshtml";
}

@{
    var sw = "";
    @if (ViewData["Filtre"] == "filtre")
    {
        sw = "show";
    }
    else
    {
        <button class="btn btn-warning" style="margin-bottom:10px;" data-toggle="collapse" data-target="#filtre">Filtreleme</button>
    }
}
<div id="filtre" class="collapse @sw">
    <form action="~/Personeller" method="get">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Bolüm</label>
                    <select name="BolumId" id="BolumId" class="form-control" asp-items="ViewBag.BolumId"> <option value="">Bütün Bölümler</option></select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Arama</label>
                    <input type="text" id="ara" class="form-control" name="ara" value="@ViewBag.Ara" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Listele" />
                    @if (ViewData["Filtre"] == "filtre")
                    {
                        <a asp-action="Bolum" class="btn btn-danger">Filtreyi Temizle</a>
                    }
                </div>

            </div>

        </div>
    </form>
</div>
<p>
    <a asp-action="Create" class="btn btn-primary"> + Personel Ekle</a>
</p>
<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TcKimlikNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EPosta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iban)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sifre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bolum.Bolum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unvan.Unvan)
            </th>

            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TcKimlikNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EPosta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Iban)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sifre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bolum.Bolum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unvan.Unvan)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs"><i class="fa fa-pencil-square-o"></i> Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
