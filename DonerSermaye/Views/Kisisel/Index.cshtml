@model IEnumerable<DonerSermaye.Models.Data.Personeller>
@using Microsoft.AspNetCore.Http
@if (@Context.Session.GetString("yetki") == "2")
    {

        Layout = "~/Views/Shared/Index1.cshtml";
    }
    else if (@Context.Session.GetString("yetki") == "1")
    {

        Layout = "~/Views/Shared/bolumbaskan.cshtml";
    }
    else if (@Context.Session.GetString("yetki") == "3")
    {

        Layout = "~/Views/Shared/doner.cshtml";
    }

    @{
        ViewData["Title"] = "Kişisel Bilgilerim";
        ViewData["Baslik"] = "Kişisel Bilgilerim";

    }

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Tc Kimlik No
                </th>
                <th>
                    Ad
                </th>
                <th>
                    Soyad
                </th>
                <th>
                    Iban No
                </th>
               
                <th>Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TcKimlikNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soyad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Iban)
                    </td>
                 
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs">  <i class="ace-icon fa fa-pencil-square-o "></i>Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
