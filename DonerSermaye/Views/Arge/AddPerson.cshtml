@model DonerSermaye.Models.Data.Arge
@{
@using Microsoft.AspNetCore.Http
if (@Context.Session.GetString("yetki") == "2")
{

    Layout = "~/Views/Shared/Index1.cshtml";
}
else if (@Context.Session.GetString("yetki") == "1")
{

    Layout = "~/Views/Shared/bolumbaskan.cshtml";
}
else if (@Context.Session.GetString("yetki") == "3")
{

    Layout = "~/Views/Shared/doner.cshtml";
}
}
@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Personel" class="control-label">Personeller</label>
                <select id="PersonelListesi" name="PersonelListesi" multiple class="form-control" asp-items="ViewBag.Personeller"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />  <a class="btn-primary btn" asp-action="Index"> <i class="ace-icon fa fa-external-link "></i>Arge Listesine Dön</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#PersonelListesi').select2({ width: '100%' });
        });
    </script>
}