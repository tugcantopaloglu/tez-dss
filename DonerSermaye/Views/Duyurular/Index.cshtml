@model IEnumerable<DonerSermaye.Models.Data.Duyurular>
@using Microsoft.AspNetCore.Http
@using DonerSermaye.Models.Helper
@{
    ViewData["Title"] = "Duyurular";
    ViewData["Baslik"] = "Duyurular";
    Layout = LayoutHelper.GetPath(@Context.Session.GetString("yetki"));
}

<p>
    <a asp-action="Create" class="btn btn-primary btn-xs">Duyuru Ekle </a>
</p>
<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>
               No
            </th>
            <th>
                Duyuru Başlığı
            </th>
            <th>
                Duyuru
            </th>
            <th>
                Tarih
            </th>
            <th>
                Gönderen
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DuyuruNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duyuru)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GonderenNavigation.Ad)  @Html.DisplayFor(modelItem => item.GonderenNavigation.Soyad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DuyuruNo" class="btn btn-success btn-xs"><i class="fa fa-edit"></i> Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.DuyuruNo" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
