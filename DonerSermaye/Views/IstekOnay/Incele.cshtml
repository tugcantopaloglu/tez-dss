@model DonerSermaye.Models.Data.IstekOnayInceleViewModel

@{
    Layout = null;
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">@Model.Bolum</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="infobox-data">
                <div class="infobox-content" style="font-size:13px"> Bölümün Harcanabilir Rakamı: @Model.Kalan TL</div>
                <div class="infobox-content" style="font-size:13px">
                    Bölümün satın alma bekleyen iş toplam tutarı: @Model.BekleyenYaklasikMaliyet
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            <!-- Modal footer içeriğini buraya ekleyin -->
        </div>
    </div>
</div>