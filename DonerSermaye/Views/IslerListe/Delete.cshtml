@model DonerSermaye.Models.Data.Isler

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/index1.cshtml";
}


<h3>   Aşağıda detayları verilen işi silmek istiyor musunuz ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            İş Numarası
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            Firma Adı
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Firma.FirmaAdi)
        </dd>
        <dt>
            Tutar
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tutar)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">İş Listesine Dön</a>
    </form>
</div>
