
@using Microsoft.AspNetCore.Http


@if (@Context.Session.GetString("yetki") == "2" || @Context.Session.GetString("yetki") == "3" || @Context.Session.GetString("yetki") == "1" || @Context.Session.GetString("yetki") == "5")
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta charset="utf-8" />
        <title>@ViewData["Title"] </title>
        <meta name="description" content="" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="~/tema/assets/js/ace-extra.min.js"></script>
        <script src="~/tema/assets/js/genel.js"></script>
        @RenderSection("Styles", required: false)
        <link rel="stylesheet" href="~/tema/assets/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/tema/assets/font-awesome/4.5.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/tema/assets/css/fonts.googleapis.com.css" />
        <link rel="stylesheet" href="~/tema/assets/css/ace.min.css" class="ace-main-stylesheet" id="main-ace-style" />
        <link rel="stylesheet" href="~/tema/assets/css/ace-skins.min.css" />
        <link rel="stylesheet" href="~/tema/assets/css/ace-rtl.min.css" />
        <link rel="stylesheet" href="~/select2/css/select2.css" />
        <style>
            @@media print {
                .dontprint {
                    display: none;
                }
            }
        </style>
    </head>

    <body class="no-skin">
        <div id="navbar" class="navbar navbar-default          ace-save-state">
            <div class="navbar-container ace-save-state" id="navbar-container">
                <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
                    <span class="sr-only">Toggle sidebar</span>

                    <span class="icon-bar"></span>

                    <span class="icon-bar"></span>

                    <span class="icon-bar"></span>
                </button>

                <div class="navbar-header pull-left">
                    <a href="KisiselOzet" class="navbar-brand">
                        <small>
                            <i class="ace-icon fa fa-cogs"></i>
                            Mühendislik Fakültesi Döner Sermaye Otomasyonu
                        </small>
                    </a>
                </div>

                <div class="navbar-buttons navbar-header pull-right" role="navigation">
                    <ul class="nav ace-nav">

                        <li class="light-blue dropdown-modal">
                            <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                                <span>
                                    @Context.Session.GetString("kisi")
                                    @if (@Context.Session.GetString("yetki") == "1")
                                    {
                                        Write("-Bölüm Başkanı");
                                    }
                                    else if (@Context.Session.GetString("yetki") == "2")
                                    {
                                        Write("-Öğretim Üyesi");
                                    }
                                    else if (@Context.Session.GetString("yetki") == "3")
                                    {
                                        Write("-Döner Sermaye Personeli");
                                    }
                                </span>
                            </a>


                        </li>
                    </ul>
                </div>
            </div><!-- /.navbar-container -->
        </div>

        <div class="main-container ace-save-state" id="main-container">
            <script type="text/javascript">
                try { ace.settings.loadState('main-container') } catch (e) { }
            </script>

            <div id="sidebar" class="sidebar                  responsive                    ace-save-state">
                <script type="text/javascript">
                    try { ace.settings.loadState('sidebar') } catch (e) { }
                </script>
                <ul class="nav nav-list">
                    <li class="">
                        <a href="/KisiselOzet">
                            <i class="menu-icon fa fa-tachometer"></i>
                            <span class="menu-text"> Özet Bilgiler </span>
                        </a>

                        <b class="arrow"></b>
                    </li>
                    <li class="">
                        <a href="/Isler/Create">
                            <i class="menu-icon fa fa-bolt"></i>
                            İş Ekle
                        </a>
                    </li>
                    <li class="">
                        <a href="/Isler">
                            <i class="menu-icon fa fa-bolt"></i>
                            İş Listesi
                        </a>
                    </li>
                    <li class="">
                        <a href="/LabIsler">
                            <i class="menu-icon fa fa-bolt"></i>
                            İş Listesi (Lab)
                        </a>
                    </li>
                    <li class="">
                        <a href="/Firmalar">
                            <i class="menu-icon fa fa-globe"></i>
                            Firma İşlemleri
                        </a>
                    </li>
                    <li class="">
                        <a href="/Arge">
                            <i class="menu-icon fa fa-bullhorn"></i>
                            <span class="menu-text"> Arge İşlemleri </span>
                        </a>
                    </li>
                    <li class="">
                        <a href="/IsTalepleri">
                            <i class="menu-icon fa fa-bullhorn"></i>
                            <span class="menu-text"> İş Türü Talebi </span>
                        </a>
                    </li>
                    <li class="">
                        <a href="/Duyuru">
                            <i class="menu-icon fa fa-bullhorn"></i>
                            <span class="menu-text"> Duyurular </span>
                        </a>
                    </li>
                    <li class="">
                        <a href="#" class="dropdown-toggle">
                            <i class="menu-icon fa fa-table"></i>

                            <span class="menu-text">
                                Raporlar
                            </span>

                            <b class="arrow fa fa-angle-down"></b>
                        </a>

                        <b class="arrow"></b>

                        <ul class="submenu">

                            <li class="">
                                <a href="/FirmaRaporu">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    Firma Raporları
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="/DagitimRaporu">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    Dağıtım Raporları
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="/Istatistik">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    İstatistikler
                                </a>
                                <b class="arrow"></b>
                            </li>

                        </ul>
                    </li>
                    <li class="">
                        <a href="/Kisisel/Edit/@Context.Session.GetString("PersonelId")">
                            <i class="menu-icon fa fa-user"></i>
                            Kişisel Bilgilerim
                        </a>
                    <li />
                    @{
                        string goster = "";
                    }
                    @if (Context.Session.GetString("yetki") == "1")
                    {
                        goster = "block";
                    }
                    else
                    {
                        goster = "none";
                    }
                    <li style="display:@goster" class="">
                        <a class="btn btn-warning" style="height:unset;" href="/BolumOzet">
                            Bölüm Başkanı Yetkisine Dön
                        </a>
                    <li />
                    <li class="">
                        <a href="/Cikis">
                            <i class="menu-icon fa fa-power-off"></i>
                            Çıkış Yap
                        </a>
                    </li>
                </ul><!-- /.nav-list -->

            </div>

            <div class="main-content">
                <div class="main-content-inner">


                    <div class="page-content">
                        <div class="page-header dontprint">
                            <h1>
                                @ViewData["Baslik"]
                                <small>
                                    <i class="ace-icon fa fa-angle-double-right"></i>

                                </small>
                            </h1>
                        </div>


                        <div class="row">
                            <div class="col-xs-12">
                                @RenderBody()
                                <!-- PAGE CONTENT BEGINS -->
                                <!-- PAGE CONTENT ENDS -->
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </div><!-- /.page-content -->
                </div>
            </div><!-- /.main-content -->

            <div class="dontprint footer">
                <div class="footer-inner">
                    <div class="footer-content">
                        <span class="bigger-120">
                            <span class="blue bolder">Ege Üniversitesi</span>
                            Mühendislik Fakültesi - 2021
                        </span>

                    </div>
                </div>
            </div>

            <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
                <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
            </a>
        </div><!-- /.main-container -->
        <!-- basic scripts -->
        <!--[if !IE]> -->
        <script src="~/tema/assets/js/jquery-2.1.4.min.js"></script>

        <!-- <![endif]-->
        <!--[if IE]>
    <script src="assets/js/jquery-1.11.3.min.js"></script>
    <![endif]-->
        <script type="text/javascript">
            if ('ontouchstart' in document.documentElement) document.write("<script src='~/tema/assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
        </script>
        <script src="~/tema/assets/js/bootstrap.min.js"></script>

        <!-- page specific plugin scripts -->
        <!-- ace
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script> scripts -->

        <script src="~/tema/assets/js/ace-elements.min.js"></script>
        <script src="~/tema/assets/js/ace.min.js"></script>

        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/select2/js/select2.js"></script>
        @RenderSection("Scripts", required: false)

        <!-- inline scripts related to this page -->
    </body>
</html>

}
else
{
<section style="display:none">
    @RenderBody()
</section>

<script type="text/javascript">

    window.location = "/Giris"

</script>
}


