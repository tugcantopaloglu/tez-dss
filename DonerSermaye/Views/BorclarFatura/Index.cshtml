@model IEnumerable<DonerSermaye.Models.Data.Isler>

@{
    ViewData["Title"] = "Borçlar Faturası";
    ViewData["Baslik"] = "Borçlar Faturası";
    Layout = "~/Views/Shared/doner.cshtml";
}

<table class="table table-hover table-bordered table-condensed">
    <thead>
        <tr>
                <th>
                   Tutar
                </th>
                <th>
                    Kdv
                </th>
                <th>
                   Fatura Tarihi
                </th>
                <th>
                   Fatura No
                </th>
            <th>
                Bölüm
            </th>
            <th>
               Fatura Tipi
            </th>
            <th>
              Firma
            </th>
            <th>
                İş Türü
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tutar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kdv)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FaturaTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaturaNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bolum.Bolum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaturaTipiNavigation.FaturaTipi1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firma.FirmaAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tur.Tur)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs">Düzenle</a> 

            </td>
        </tr>
}
    </tbody>
</table>
