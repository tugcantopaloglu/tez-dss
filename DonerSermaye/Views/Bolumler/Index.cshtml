@model IEnumerable<DonerSermaye.Models.Data.Bolumler>

@{
    ViewData["Title"] = "Bölümlerimiz";
    ViewData["Baslik"] = "Bölümlerimiz";
    Layout = "~/Views/Shared/doner.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary btn-xs">Bölüm Ekle</a>
</p>
<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>
                Bölüm
            </th>
            <th>
                Kesinti Ayrıntısı
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bolum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KesintitipAyrinti.Aciklama)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs"><i class="fa fa-pencil-square-o"></i> Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
