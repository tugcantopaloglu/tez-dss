@model IEnumerable<DonerSermaye.Models.Data.IsTurleri>

@{
    ViewData["Title"] = "İş Tür İşlemleri";
    ViewData["Baslik"] = "İş Tür İşlemleri";
    Layout = "~/Views/Shared/doner.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary btn-xs" >İş Türü Ekle</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
                <th>
                  İş Türü
                </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tur) 
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs"><i class="fa fa-pencil-square-o"></i> Düzenle</a> 
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
