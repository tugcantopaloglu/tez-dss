@model IEnumerable<DonerSermaye.Models.Data.MyModel2>

@{
    ViewData["Title"] = "Dağıtım Raporları";
    ViewData["Baslik"] = "Dağıtım Raporları";
    Layout = "~/Views/Shared/index1.cshtml";
}
<div class="row text-center">
    <div class="infobox infobox-blue infobox-medium infobox-dark">
        <div class="infobox-icon">
            <i class="ace-icon fa fa- fa-bar-chart-o"></i>
        </div>
        <div class="infobox-data">
            <div class="infobox-content" style="font-size:9px"> Toplam Dağıtım (Tamamı)</div>
            <div class="infobox-content" style="font-size:11px">@ViewBag.toplamdagitim TL</div>
        </div>
    </div>
    <div class="infobox infobox-pink infobox-medium infobox-dark">
        <div class="infobox-icon">
            <i class="ace-icon fa fa- fa-bar-chart-o"></i>
        </div>
        <div class="infobox-data">
            <div class="infobox-content" style="font-size:9px"> Toplam Dağıtım (Seçilen Dönem)</div>
            <div class="infobox-content" style="font-size:11px">@ViewBag.secilendagitim TL</div>
        </div>
    </div>
</div>
<div class="space-4"></div>
<form action="DagitimRaporu" method="get">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Dağıtım Dönemi</label>
                <select name="HesapId" id="HesapId" onchange="this.form.submit()" class="form-control" asp-items="ViewBag.HesapId"> <option value="">Bütün Dağıtımlar</option></select>
            </div>
        </div>
    </div>
</form>

<div id="IcerikAlani">
    <table class="table table-bordered table-hover table-condensed" border="1" style="border-collapse:collapse">
        <thead>
            <tr>
                <th>
                    İş Numarası
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BolumAdi)
                </th>
                <th>
                    Açıklama
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirmaAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tutar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KesintiToplami)
                </th>
                <th>
                    Kişi Payı
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FaturaTarihi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FaturaNo)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BolumAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aciklama)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirmaAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tutar) TL
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KesintiToplami) TL
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kisi) TL
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FaturaTarihi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FaturaNo)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-right">
    <a href="javascript:CallPrint('IcerikAlani','@ViewData["Baslik"]')" class="btn btn-warning">Yazdır</a>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#FirmaId').select2({ width: '100%' });
            $('#BolumId').select2({ width: '100%' });
        });
    </script>
}