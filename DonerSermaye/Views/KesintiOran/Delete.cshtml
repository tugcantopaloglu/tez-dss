@model DonerSermaye.Models.Data.KesintiOran

@{
    ViewData["Title"] = "Silme İşlemi";
    ViewData["Baslik"] = "Silme İşlemi";
    Layout = "~/Views/Shared/doner.cshtml";
}


<h3>   @Html.DisplayFor(model => model.Kesinti.Kesinti) adlı kesintinin <b>oranını</b> silmek istiyor musunuz ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Kesinti)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Kesinti.Kesinti)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Oran)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Oran)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-info" >Kesinti Oranları</a>
    </form>
</div>
