@model IEnumerable<DonerSermaye.Models.Data.Isler>

@{
    ViewData["Title"] = "İş Listesi";
    ViewData["Baslik"] = "İş Listesi";
    Layout = "~/Views/Shared/bolumbaskan.cshtml";
}
<p>
    <a asp-action="Create" class="btn btn-primary">İş Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                İş / Firma
            </th>
            <th>
                İş Türü
            </th>
            <th>
                Tutar
            </th>
            <th>
                Bölüm
            </th>
            <th>
                Onay Durumu
            </th>
            <th>
                Ödeme Onayı
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firma.FirmaAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tur.Tur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tutar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bolum.Bolum)
                </td>
                <td class="text-danger">
                    @if (item.BolumOnay == 0)
                    {
                        <span class="text-primary">
                            ONAYLANMADI
                        </span>
                    }
                    else if (item.BolumOnay == 2)
                    {
                        <span class="text-success">
                            ONAYLANDI
                        </span>
                    }
                    else if (item.BolumOnay == 1)
                    {
                        <span class="text-danger">
                            REDDEDİLDİ
                        </span>
                    }
                </td>
                <td class="text-danger">
                    @if (item.Durum == null)
                    {
                        Write("ONAYLANMADI");
                    }

                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
