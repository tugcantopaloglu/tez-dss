@model DonerSermaye.Models.Data.EkmekTipleri

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/doner.cshtml";
}

<h4>EkmekTipleri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EkmekTipi" class="control-label"></label>
                <input asp-for="EkmekTipi" class="form-control" />
                <span asp-validation-for="EkmekTipi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirimFiyat" class="control-label"></label>
                <input asp-for="BirimFiyat" class="form-control" />
                <span asp-validation-for="BirimFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kdv" class="control-label"></label>
                <input asp-for="Kdv" class="form-control" />
                <span asp-validation-for="Kdv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ekmek Tiplerine Dön</a>
</div>

