@model DonerSermaye.Models.Data.IstekTurleri

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/doner.cshtml";
}

<h3>@Html.DisplayNameFor(model => model.Tur) Türünü Silmek İstiyormusunuz?</h3>
<div>
 
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TurNo" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">İstek Türleri</a>
    </form>
</div>
